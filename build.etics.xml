<project name="org.glite.slcs.common" default="package" basedir=".">

    <property name="workspace.dir" location=".."/>
    
    <!-- ETICS externals defs -->
    <import file="${workspace.dir}/org.glite.slcs/project/etics-externals.xml"/>

    <!-- local properties -->
    <property file="build.etics.properties" />


    <!-- set global properties for this local build -->
    <property name="src.dir" location="${basedir}/src" />
    <property name="build.dir" location="${basedir}/build" />
    <property name="dist.dir" location="${basedir}/dist" />

    <target name="init" depends="">
        <tstamp />
        <!-- libraries from ETICS repository -->
        <path id="compile.classpath">
            <fileset refid="bouncycastle.bcprov.fileset"/>
            <fileset refid="commons-codec.fileset"/>
            <fileset refid="commons-collections.fileset"/>
            <fileset refid="commons-configuration.fileset"/>
            <fileset refid="commons-httpclient.fileset"/>
            <fileset refid="commons-lang.fileset"/>
            <fileset refid="commons-logging.fileset"/>
            <fileset refid="log4j.fileset"/>
        </path>
        <path id="test.classpath">
            <path refid="compile.classpath"/>
            <fileset refid="junit.fileset"/>
        </path>
    </target>

    <target name="prepare" depends="init">
        <mkdir dir="${build.dir}" />
    </target>

    <target name="compile" depends="prepare">
        <!-- Compile the java code from ${src} into ${build} -->
        <javac srcdir="${src.dir}" debug="true" destdir="${build.dir}">
            <classpath refid="compile.classpath" />
        </javac>
    </target>

    <target name="package" depends="clean,compile">
        <!-- distribution directory -->
        <property name="dist.share.dir" location="${dist.dir}/share/java" />
        <property name="dist.externals.dir" location="${dist.dir}/externals/share/java" />
        <mkdir dir="${dist.dir}" />
        <mkdir dir="${dist.share.dir}" />
        <mkdir dir="${dist.externals.dir}" />
        <!-- jar all classes in share/java -->
        <property name="slcs.common.jar.file" location="${dist.share.dir}/${slcs.common.jarfile}" />
        <jar jarfile="${slcs.common.jar.file}" basedir="${build.dir}" />
        <!-- copy all third party libs in externals/share/java -->
        <copy todir="${dist.externals.dir}" flatten="true">
            <fileset refid="bouncycastle.bcprov.fileset"/>
            <fileset refid="commons-codec.fileset"/>
            <fileset refid="commons-collections.fileset"/>
            <fileset refid="commons-configuration.fileset"/>
            <fileset refid="commons-httpclient.fileset"/>
            <fileset refid="commons-lang.fileset"/>
            <fileset refid="commons-logging.fileset"/>
            <fileset refid="log4j.fileset"/>
        </copy>
    </target>

    <target name="clean">
        <!-- Delete the ${build} and ${dist} directory trees -->
        <delete dir="${build.dir}" />
        <delete dir="${dist.dir}" />
    </target>
</project>
